<h1><em>Welcome! Create New Fanatic Here:</em></h1>

<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :user_name %>
<%= f.text_field :user_name %><br>
<%= f.label :password %>
<%= f.password_field :password %><br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation%><br><br>
<%= f.label :bio %>
<%= f.text_area :bio %><br>
<%= f.submit 'Create!' %>
<% end %>